@define-mixin push-auto
  margin-left: auto
  margin-right: auto

@define-mixin snap-center
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

@define-mixin snap-center-x $top
  top: $top
  left: 50%
  transform: translate(-50%, 0%)

@define-mixin snap-center-y $left
  top: 50%
  left: $left
  transform: translate(0%, -50%)